{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/": ["src/"],
      "@layouts/*": ["src/views/layouts/*"],
      "@pages/*": ["src/views/pages/*"],
      "@modules/*": ["src/views/modules/*"],
      "@ui/*": ["src/views/ui/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["build", "node_modules"]
}
